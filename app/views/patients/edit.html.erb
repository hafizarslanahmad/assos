<h1>Patient Edit</h1>

<div class="row justify-content-center">
  <%= form_with model: @patient  do |form|%>
    <div class="form-group">
      <%=form.label :Name%>
      <%= form.text_field :name%>
    </div><br>
    <div class="form-group">
      <%=form.label :Diseas%>
      <%= form.text_field :diseas%> 
    </div><br>
    <div class="form-group">
      <%=form.label :Ward_Name%>
      <%= form.text_field :ward_name%>
    </div><br>
    <div class="form-group">
          <%= form.submit "Edit patient", class: 'btn btn-primary'%>
        </div>
  <%end%>
</div>