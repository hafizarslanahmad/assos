<table class="table">
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">Patient Name</th>
      <th scope="col">Diseas Name</th>
      <th scope="col">Ward Name</th>
      <th scope="col">Doctor Id</th>
      <th scope="col">Action</th>
    </tr>
  </thead>
  <tbody>
    <% @patients.each do |patient|%>
       <tr>
        <th scope="row">1</th>
        <td><%= patient.name%></td>
        <td><%= patient.diseas%></td>
        <td><%= patient.ward_name%></td>
        <td><%= patient.doctor_id%></td>
        <td><%= link_to "edit", edit_patient_path(patient.id)%></td>
        <td><%= link_to "show", patient_path(patient.id)%></td>
        <td><%= button_to "delete", patient_path(patient.id), method: :delete %></td>
      </tr>
    <%end%>
  </tbody>
</table>
