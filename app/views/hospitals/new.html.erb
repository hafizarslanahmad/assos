<h1>Hospital Create</h1>

<div class="row justify-content-center">
  <%= form_with model: @hospital  do |form|%>
   <%= form.hidden_field :user_id, value: Current.user.id%>
    <div class="form-group">
      <%=form.label :Name%>
      <%= form.text_field :name, placeholder: 'Enter Your Name'%>
    </div><br>
    <div class="form-group">
      <%=form.label :City_name%>
      <%= form.text_field :city,  placeholder: 'Enter City Name'%>
    </div><br>
    <div class="form-group">
          <%= form.submit "Create hospital", class: 'btn btn-primary'%>
        </div>
  <%end%>
</div>